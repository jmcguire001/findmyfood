<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FindMyFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/findmyfood.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMvd3uH3yM8rJq0v4x1iZV4f8p4lS5zOb72W6qr" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #d32f2f; padding: 0.5rem 1rem;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.5rem; font-weight: bold;">FindMyFood</a>
                <div class="search-bar" style="position: relative; flex-grow: 1; margin: 0 1rem;">
                    <form asp-action="Search" asp-controller="Home" method="get" style="position: relative;">
                        <input type="text" name="query" class="form-control" placeholder="Search for grocers or groceries"
                               style="border-radius: 20px; padding-left: 2.5rem;" />
                        <button class="search-button" type="submit"
                                style="position: absolute; top: 50%; left: 32px; transform: translateY(-50%); background: transparent; border: none; padding: 0;">
                            <i class="fas fa-search" style="color: #8a4b4b;"></i>
                        </button>
                    </form>

                </div>

                <div class="d-flex align-items-center">
                    <i class="fas fa-map-marker-alt" style="color: #f4a261; margin-right: 1rem; font-size: 1.5rem;"></i>
                    <i class="fas fa-car" style="color: #f4a261; margin-right: 1rem; font-size: 1.5rem;"></i>
                    <i class="fas fa-user-circle" style="color: white; font-size: 1.5rem;"></i>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="position: relative; clear: both; width: 100%; text-align: center">
        <div class="container">
            &copy; 2024 - FindMyFood - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Terms and Conditions</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
